{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": false,
        "baseUrl": "../",
        "paths": {
            "@core/*": [
                "client/src/core/*"
            ],
            "@src/*": [
                "client/src/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
    ]
}