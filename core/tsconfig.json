{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "composite": true,
    "baseUrl": "../",
    "paths": {
      "@core/*": ["core/src/*"],
      "@models/*": ["models/src/*"]
    },
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "outDir": "./dist",
    "declarationMap": true,
    "types": ["node"],
    "plugins": []
  },
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../models" }]
}
