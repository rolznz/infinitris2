{
  "name": "functions",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build-webpack": "yarn lint && webpack",
    "serve": "firebase functions:config:get > .runtimeconfig.json && yarn build && firebase emulators:start --only firestore,functions,auth,pubsub",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy:characters": "GOOGLE_APPLICATION_CREDENTIALS=\"infinitris2-admin-service-key.json\" ts-node src/character-uploader.ts",
    "test:emulator:setup": "firebase init emulators",
    "test:emulator:start": "FIRESTORE_EMULATOR_HOST=localhost:8080 firebase emulators:start --only firestore,functions,auth",
    "test": "jest --runInBand",
    "test:files:entityHooks": "jest -- \"src/__tests__/entityHooks.test.ts\"",
    "test:files:authUserHooks": "jest -- \"src/__tests__/authUserHooks.test.ts\"",
    "test:files:userRules": "jest -- \"src/__tests__/userRules.test.ts\"",
    "test:files:conversionRules": "jest -- \"src/__tests__/conversionRules.test.ts\"",
    "test:files:conversionHooks": "jest -- \"src/__tests__/conversionHooks.test.ts\"",
    "test:files:nicknameHooks": "jest -- \"src/__tests__/nicknameHooks.test.ts\"",
    "test:files:nicknameRules": "jest -- \"src/__tests__/nicknameRules.test.ts\"",
    "test:files:roomRules": "jest -- \"src/__tests__/roomRules.test.ts\"",
    "test:files:challengeRules": "jest -- \"src/__tests__/challengeRules.test.ts\"",
    "test:files:challengeHooks": "jest -- \"src/__tests__/challengeHooks.test.ts\"",
    "test:files:challengeAttemptRules": "jest -- \"src/__tests__/challengeAttemptRules.test.ts\"",
    "test:files:challengeAttemptHooks": "jest -- \"src/__tests__/challengeAttemptHooks.test.ts\"",
    "test:files:entityQueries": "jest -- \"src/__tests__/entityQueries.test.ts\"",
    "test:files:ratingRules": "jest -- \"src/__tests__/ratingRules.test.ts\"",
    "test:files:ratingHooks": "jest -- \"src/__tests__/ratingHooks.test.ts\"",
    "test:files:purchaseRules": "jest -- \"src/__tests__/purchaseRules.test.ts\"",
    "test:files:purchaseHooks": "jest -- \"src/__tests__/purchaseHooks.test.ts\"",
    "test:files:affiliateRules": "jest -- \"src/__tests__/affiliateRules.test.ts\"",
    "test:files:colorHooks": "jest -- \"src/__tests__/colorHooks.test.ts\"",
    "test:files:serverKeyRules": "jest -- \"src/__tests__/serverKeyRules.test.ts\"",
    "test:files:scheduledCreditReward": "jest -- \"src/__tests__/scheduledCreditReward.test.ts\"",
    "test:files:updateNetworkImpact": "jest -- \"src/__tests__/updateNetworkImpact.test.ts\"",
    "test:files:updateUserRateLimit": "jest -- \"src/__tests__/updateUserRateLimit.test.ts\"",
    "test:files:donationsWebhook": "jest -- \"src/__tests__/donationsWebhook.test.ts\"",
    "test:files:paymentsWebhook": "jest -- \"src/__tests__/paymentsWebhook.test.ts\"",
    "test:files:paymentRules": "jest -- \"src/__tests__/paymentRules.test.ts\"",
    "test:files:serversWebhook": "jest -- \"src/__tests__/serversWebhook.test.ts\"",
    "test:files:createUserWebhook": "jest -- \"src/__tests__/createUserWebhook.test.ts\"",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "dist/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "9.11.1",
    "firebase-functions": "3.15.7",
    "got": "11.x",
    "http-status-codes": "^2.2.0",
    "infinitris2-models": "^0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.14.2",
    "@firebase/rules-unit-testing": "^1.3.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^25.x",
    "@types/node": "^16.10.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.6",
    "firebase-functions-test": "^0.3.0",
    "grpc": "^1.24.11",
    "jest": "^25.x",
    "supertest": "^6.1.6",
    "ts-jest": "^25.x",
    "ts-loader": "8.x",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.7",
    "webpack-node-externals": "^3.0.0"
  },
