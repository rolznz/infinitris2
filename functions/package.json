    "test:files:roomRules": "jest -- \"src/__tests__/roomRules.test.ts\"",
    "test:files:challengeRules": "jest -- \"src/__tests__/challengeRules.test.ts\"",
    "test:files:challengeHooks": "jest -- \"src/__tests__/challengeHooks.test.ts\"",
