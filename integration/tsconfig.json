{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "baseUrl": "../",
    "paths": {
      "@core/*": ["core/src/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },
    "plugins": []
  },
  "exclude": ["node_modules"],
  "references": [{ "path": "../core" }]
}
