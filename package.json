{
  "private": true,
  "workspaces": {
    "packages": [
      "app",
      "functions",
      "models",
      "webpack/functions-deploy",
      "character-generator",
      "swr-firestore",
      "client",
      "server",
      "core",
      "svg-to-png"
    ]
  },
  "scripts": {
    "prettier:write": "prettier \"**/*.{ts,tsx}\" --write",
    "prettier:check": "prettier \"**/*.{ts,tsx}\" --check",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes",
    "firebase:deploy:functions": "firebase --config firebase.functions-deploy.json deploy --only functions",
    "firebase:deploy:functions:onCreateAuthUser": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateAuthUser",
    "firebase:deploy:functions:onCreateConversion": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateConversion",
    "firebase:deploy:functions:onCreateNickname": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateNickname",
    "firebase:deploy:functions:onCreateEntity": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateEntity",
    "firebase:deploy:functions:onUpdateEntity": "firebase --config firebase.functions-deploy.json deploy --only functions:onUpdateEntity",
    "firebase:deploy:functions:rateLimiters": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateEntity,functions:onUpdateEntity",
    "firebase:deploy:functions:onCreateChallenge": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateChallenge",
    "firebase:deploy:functions:onCreatePurchase": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreatePurchase",
    "firebase:deploy:functions:webhooks": "firebase --config firebase.functions-deploy.json deploy --only functions:webhooks",
    "firebase:deploy:functions:onUpdateScoreboardSchedule": "firebase --config firebase.functions-deploy.json deploy --only functions:onUpdateScoreboardSchedule",
    "firebase:deploy:functions:onScheduledFirestoreExport": "firebase --config firebase.functions-deploy.json deploy --only functions:onScheduledFirestoreExport",
    "firebase:deploy:functions:onCreateRating": "firebase --config firebase.functions-deploy.json deploy --only functions:onCreateRating",
    "delete-zone-identifiers": "./scripts/delete-zone-identifiers.sh",
    "delete-node-modules": "./scripts/delete-node-modules.sh"
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "packageManager": "yarn@3.1.1",
  "engines": {
    "node": "14.x",
    "yarn": "3.x"
  }
}
