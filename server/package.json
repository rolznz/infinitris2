{
  "name": "infinitris2-server",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist && rm -rf ts-out",
    "build-tests": "tsc",
    "watch-tests": "tsc -w",
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=spec/support/jasmine.json",
    "coverage": "nyc --cache false -r lcov -r text yarn test",
    "build": "webpack",
    "watch": "webpack --watch",
    "start": "node ./dist/bundle.js launch",
    "debug": "node --nolazy --inspect-brk ./dist/bundle.js launch",
    "docs": "typedoc --out docs --readme README.md src",
    "dev": "webpack --watch & nodemon ./dist/bundle.js launch",
    "docker:build": "docker build --tag infinitris-server .",
    "docker:run": "docker run --name infinitris-server --publish 9001:9001 infinitris-server",
    "docker:run-alt-port": "docker run --name infinitris-server --publish 9000:9000 -e PORT=9000 infinitris-server",
    "deploy:heroku": "heroku container:push web && heroku container:release web"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "spec/**/*",
      "coverage/**/*",
      "dist/**/*",
      "docs/**/*",
      "webpack.config.js"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolznz/infinitris2.git"
  },
  "keywords": [
    "infinitris2",
    "server"
  ],
  "author": "rolznz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rolznz/infinitris2/issues"
  },
  "homepage": "https://github.com/rolznz/infinitris2#readme",
  "devDependencies": {
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.7.8",
    "@types/ws": "^6.0.3",
    "dotenv": "^10.0.0",
    "jasmine": "^3.5.0",
    "module-alias": "^2.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^14.1.1",
    "ts-loader": "^8",
    "ts-node": "^8.4.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typedoc": "^0.15.0",
    "typescript": "^4.1.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "dependencies": {
    "ws": "^7.1.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  },
  "_moduleAliases": {
    "@core": "../core/src",
    "@src": "src"
  }
}
