{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "baseUrl": "../",
    "paths": {
      "@core/*": ["core/src/*"],
      "@src/*": ["server/src/*"],
      "@models/*": ["models/src/*"]
    },
    "plugins": []
  },
  "exclude": ["node_modules"]
}
