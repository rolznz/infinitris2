{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["../core/src/*"],
      "@models/*": ["../models/src/*"],
      "@src/*": ["src/*"]
    },
    "plugins": []
  },
  "include": ["**/*", "../core/src/**/*", "../models/src/**/*"],
  "exclude": ["node_modules", "../models/src/__tests__/*"]
}
