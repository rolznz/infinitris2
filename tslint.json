{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "eofline": false,
        "quotemark": [
            true,
            "double",
            "avoid-escape"
        ],
        "member-ordering": [
          false
        ],
        "interface-name": [false],
        "one-line": false,
        "arrow-parens": false,
        "ordered-imports": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore"
            ]
        },
        "no-console": false,
        "member-access": false,
        "comment-format": false,
        "object-literal-sort-keys": false,
        "completed-docs": [
            true,
            {
                "constructors": true,
                "variables": {"visibilities": ["exported"]},
                "functions": {
                    "visibilities": [
                        "exported"
                    ]
                },
                "methods": {
                    "privacies": ["public"],
                    "tags": {
                        "content": {},
                        "existence": ["inheritdoc"]
                    }
                }
            }
        ]
    },
    "rulesDirectory": []
}